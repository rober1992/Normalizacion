<div class="chat-messages" id="chat-messages">
  <div class="message">
    <div class="user-info">
    <p class="meta">juancarlos</p><span class="time-right">11:00</span>
    </div>
     <p class="text-msg">Hello. How are you today?</p>
  </div>
</div>
<div class="chat-form-container">
      <form id="msgForm" class="chat-form">
        <input id="msg" name="msg" type="text" placeholder="Enter Message" required autocomplete="off" />
        <label for="email">Ingrese su email</label>
        <input
							type="email"
							name="email"
							id="email"
							placeholder="Enter email..."
							required
/>
<input
							type="text"
							name="nombre"
							id="nombre"
							placeholder="Enter name..."
							required
/>
<input
							type="text"
							name="apellido"
							id="apellido"
							placeholder="Enter lastname..."
							required
/>
<input
							type="text"
							name="alias"
							id="alias"
							placeholder="Enter alias..."
							required
/>
<input
							type="number"
							name="edad"
							id="edad"
							placeholder="Enter age..."
							required
/>
<input
							type="text"
							name="avatar"
							id="avatar"
							placeholder="Enter avatar..."
							required
/>
        <button type="submit" class="btn"><i class="fas fa-paper-plane"></i> Send</button>
      </form>
</div>
